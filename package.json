{
  "name": "playwright_autotests",
  "version": "1.0.0",
  "description": "E2E tests with Playwright and TypeScript stack",
  "main": "playwright.config.ts",
  "scripts": {
    "eslint:validate": "eslint .",
    "lint-staged": "lint-staged",
    "eslint": "eslint --config eslint.config.mjs ",
    "eslint:fix": "eslint . --fix --config eslint.config.mjs",
    "format": "prettier --config .prettierrc.js --ignore-path .gitignore --write .",
    "functional-tests": "npx playwright test --grep @functional",
    "test": "playwright test",
    "stage:test": "ENVIRONMENT=stage npx playwright test --project='Chrome E2E tests'",
    "preprod:test": "ENVIRONMENT=preprod npx playwright test --project='Chrome E2E tests'",
    "prepare": "husky install",
    "prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://development.idgital.com/idgital/qa/playwright_autotests.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@playwright/test": "^1.52.0",
    "dotenv": "^16.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "typescript-eslint": "^8.31.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@stylistic/eslint-plugin": "3.0.1",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^8.0.0",
    "prettier": "^3.5.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, ts}": [
      "npm run eslint:fix"
    ],
    "*.{json, js, ts, md}": [
      "npm run format"
    ]
  },
  "overrides": {
    "eslint": {
      "file-entry-cache": "10.0.6"
    }
  }
}
